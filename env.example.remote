# Remote Agent Environment Configuration Template
# Copy this file to .env and fill in your API keys

# ============================================
# E2B Sandbox Configuration
# ============================================
# Get your E2B API key from: https://e2b.dev
E2B_API_KEY=your_e2b_api_key_here

# Default timeout for sandboxes (in seconds)
# Hobby tier: max 3600 (1 hour)
# Pro tier: max 86400 (24 hours)
E2B_DEFAULT_TIMEOUT=3600

# Enable auto-pause to preserve state instead of terminating
E2B_AUTO_PAUSE=true

# Maximum timeout (depends on your E2B tier)
E2B_MAX_TIMEOUT=86400

# ============================================
# GitHub Integration
# ============================================
# Personal Access Token with 'repo' scope
# Get from: GitHub Settings → Developer settings → Personal access tokens
GITHUB_TOKEN=your_github_personal_access_token

# Your GitHub username
GITHUB_REPO_OWNER=your_github_username

# Repository name (default: dexter)
GITHUB_REPO_NAME=dexter

# ============================================
# Dexter Agent Configuration
# ============================================
# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Financial Datasets API Key
# Get from: https://financialdatasets.ai
FINANCIAL_DATASETS_API_KEY=your_financial_datasets_key_here

# Agent execution limits
DEXTER_MAX_STEPS=20
DEXTER_MAX_STEPS_PER_TASK=5

# ============================================
# Optional: Claude Code Integration
# ============================================
# Anthropic API Key (optional, for Claude Code CLI)
# Get from: https://console.anthropic.com
# ANTHROPIC_API_KEY=your_anthropic_key_here

# Enable Claude Code CLI integration (requires ANTHROPIC_API_KEY)
# ENABLE_CLAUDE_CODE=false

# ============================================
# Advanced Configuration (Optional)
# ============================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

# Enable verbose logging
# VERBOSE_LOGGING=false

# Orchestrator state file path
# ORCHESTRATOR_STATE_FILE=orchestrator_state.json

# E2B state file path
# E2B_STATE_FILE=e2b_state.json
